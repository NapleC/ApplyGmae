.swiper-container {
  position: relative;
}

/* 轮播图控件样式 宽高比1：1*/

.swiper {
  height: 320rpx;
  width: 100%;
}

/* 轮播图单张图片样式,*/

.swiper .image {
  height: 100%;
  width: 100%;
}

/* 指示器样式*/

.dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}

.dots .dot {
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: #fff;
  border-radius: 8rpx;
  transition: all 0.6s;
}

.dots .dot.active {
  width: 24rpx;
  background: #45affa;
  color: #fff;
}

.topic-text {
  color: #7d7d7d;
  font-size: 20rpx;
  margin-left: 20rpx;
}

.topic-center-text {
  width: 100%;
  color: #7d7d7d;
  margin-top: 10rpx;
  font-size: 20rpx;
  align-self: center;
  align-content: center;
  justify-content: center;
  display: flex;
}

/* 纵向列表排列 */

.list {
  width: 100%；;
}

/* item 样式,注意:使用 display: block来让该布局成为块级元素*/

.list-item {
  padding: 20rpx;
  display: flex;
  text-align: left;
  flex-direction: row;
}

.item-side {
  border-radius: 8rpx;
  height: 150rpx;
  width: 260rpx;
  flex-grow: 0;
}

.item-main {
  display: flex;
  flex-grow: 1;
  max-width: 480rpx;
  flex-direction: column;
  justify-content: space-between;
}

.item-text {
  color: #7D7D7D;
  font-size: 24rpx;
}
/*两行的标题文本*/
.note2_text {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
  font-size: 28rpx;
}

/*热门活动*/
.flex-activity {
  padding: 10rpx;
  height: 180rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.activity-one-area {
  border-radius: 8rpx;
  height: 100%;
  flex-grow: 1;
  margin: 6rpx;
}

/*其他地区赛事*/

.other-area-container {
  display:flex;
  justify-content:space-around;
  align-items:center;
  height: 120rpx;
  flex-direction: row;
}

.other-area-item {
  /*margin-left: 20px;*/
  /*margin-top: 20px;*/
  display: flex;
  height: 86rpx;
  width: 86rpx;
  border-radius: 50%;
  border: 1rpx solid #B9B9B9;
  background-color: #d8d8d8;
  justify-content: center;
}

.other-area-text {
  font-size: 24rpx;
  color: #666666;
  align-self: center;
}