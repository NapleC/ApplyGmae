<!-- 轮播图部分 -->
<view>
  <view class="swiper-container">
    <swiper autoplay="auto" interval="3000" current="{{swiperCurrent}}" bindchange="swiperChange" class="swiper">
      <block wx:for="{{banners}}" wx:key="_id">
        <swiper-item>
          <image src="{{item.url}}" class="image" mode="aspectFill" bindtap="swipclick" id='{{index}}' />
        </swiper-item>
      </block>
    </swiper>
    <!-- 轮播图指示器 -->
    <view class="dots">
      <block wx:for="{{banners}}" wx:key="unique">
        <view class="dot{{index == swiperCurrent ? ' active' : ''}}"></view>
      </block>
    </view>
  </view>
  <view>
    <text class='topic-center-text'>其他地区赛事</text>
  </view>
  <view class="other-area-container">
    <view class="other-area-item"><text class='other-area-text'>联通</text></view>
    <view class="other-area-item"><text class='other-area-text'>移动</text></view>
    <view class="other-area-item"><text class='other-area-text'>电信</text></view>
    <view class="other-area-item"><text class='other-area-text'>腾讯</text></view>
    <view class="other-area-item"><text class='other-area-text'>京东</text></view>
  </view>

  <view>
    <text class='topic-text'>热门活动</text>
  </view>
  <view class="flex-activity">
    <image src="https://ws1.sinaimg.cn/large/610dc034ly1fp9qm6nv50j20u00miacg.jpg" class="activity-one-area" mode="aspectFill" />
    <image src="https://ws1.sinaimg.cn/large/610dc034ly1fp9qm6nv50j20u00miacg.jpg" class="activity-one-area" mode="aspectFill" />
  </view>
  <view>
    <text class='topic-text'>热门资讯</text>
  </view>
  <!-- 纵向列表 -->
  <view class="list" id="{{index}}">
    <block wx:for="{{listData}}" wx:key="_id">
      <view class="list-item" bindtap="homeItemClick" data-id='{{item._id}}'>
        <view class="item-main">
          <view>
            <text class="note2_text">这是哪种类别: {{item.type}}，还是说这是哪个标题类型是： {{item.type}}</text>
          </view>
          <view>
            <text class="item-text">时间: {{item.desc}} </text>
            <text class="item-text"> 来源: {{item.who}}</text>
          </view>
        </view>
        <image src="{{item.url}}" class="item-side" mode="aspectFill" />
      </view>
    </block>
  </view>
</view>